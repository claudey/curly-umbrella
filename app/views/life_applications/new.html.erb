<% content_for :title, "New Life Insurance Application" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">New Life Insurance Application</h1>
  <%= link_to "Back", life_applications_path, class: "btn btn-outline" %>
</div>

<div class="card bg-base-100 shadow-xl max-w-4xl mx-auto">
  <div class="card-body">
    <%= form_with model: @life_application, local: true, class: "space-y-6" do |form| %>
      <% if @life_application.errors.any? %>
        <div class="alert alert-error">
          <h3 class="font-bold">Please fix the following errors:</h3>
          <ul class="list-disc list-inside">
            <% @life_application.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="form-control">
          <%= form.label :client_id, "Client", class: "label" %>
          <%= form.collection_select :client_id, @clients, :id, :full_name, 
              { prompt: 'Select a client' }, 
              { class: "select select-bordered", required: true } %>
        </div>

        <div class="form-control">
          <%= form.label :coverage_amount, class: "label" %>
          <%= form.number_field :coverage_amount, class: "input input-bordered", step: 1000, min: 0 %>
        </div>

        <div class="form-control">
          <%= form.label :beneficiary_name, class: "label" %>
          <%= form.text_field :beneficiary_name, class: "input input-bordered" %>
        </div>

        <div class="form-control">
          <%= form.label :beneficiary_relationship, class: "label" %>
          <%= form.select :beneficiary_relationship, 
              options_for_select([
                ['Spouse', 'spouse'],
                ['Child', 'child'],
                ['Parent', 'parent'],
                ['Sibling', 'sibling'],
                ['Other', 'other']
              ]), 
              { prompt: 'Select relationship' }, 
              { class: "select select-bordered" } %>
        </div>
      </div>

      <div class="form-control">
        <%= form.label :medical_history, class: "label" %>
        <%= form.text_area :medical_history, class: "textarea textarea-bordered", rows: 4 %>
      </div>

      <div class="form-control">
        <%= form.label :lifestyle_factors, class: "label" %>
        <%= form.text_area :lifestyle_factors, class: "textarea textarea-bordered", rows: 3 %>
      </div>

      <div class="form-control">
        <%= form.label :notes, class: "label" %>
        <%= form.text_area :notes, class: "textarea textarea-bordered", rows: 3 %>
      </div>

      <div class="card-actions justify-end">
        <%= link_to "Cancel", life_applications_path, class: "btn btn-ghost" %>
        <%= form.submit "Create Application", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>