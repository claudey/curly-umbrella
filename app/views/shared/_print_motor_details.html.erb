<div class="print-form-section motor-details">
  <h3 class="print-form-section-title">Vehicle Details</h3>
  
  <% vehicle_info = application.vehicle_info || {} %>
  
  <div class="print-two-columns">
    <div class="print-column">
      <div class="print-field-row">
        <span class="print-field-label">Make:</span>
        <span class="print-field-value"><%= vehicle_info['make'] %></span>
      </div>
      <div class="print-field-row">
        <span class="print-field-label">Model:</span>
        <span class="print-field-value"><%= vehicle_info['model'] %></span>
      </div>
      <div class="print-field-row">
        <span class="print-field-label">Year:</span>
        <span class="print-field-value"><%= vehicle_info['year'] %></span>
      </div>
      <div class="print-field-row">
        <span class="print-field-label">Color:</span>
        <span class="print-field-value"><%= vehicle_info['color'] %></span>
      </div>
    </div>
    <div class="print-column">
      <div class="print-field-row">
        <span class="print-field-label">VIN:</span>
        <span class="print-field-value"><%= vehicle_info['vin'] %></span>
      </div>
      <div class="print-field-row">
        <span class="print-field-label">License Plate:</span>
        <span class="print-field-value"><%= vehicle_info['license_plate'] %></span>
      </div>
      <div class="print-field-row">
        <span class="print-field-label">Mileage:</span>
        <span class="print-field-value">
          <%= number_with_delimiter(vehicle_info['mileage']) if vehicle_info['mileage'].present? %> miles
        </span>
      </div>
      <div class="print-field-row">
        <span class="print-field-label">Vehicle Value:</span>
        <span class="print-field-value print-amount">
          <%= number_to_currency(vehicle_info['value']) if vehicle_info['value'].present? %>
        </span>
      </div>
    </div>
  </div>
  
  <% if vehicle_info['usage'].present? %>
    <div class="print-field-row">
      <span class="print-field-label">Primary Use:</span>
      <span class="print-field-value"><%= vehicle_info['usage']&.humanize %></span>
    </div>
  <% end %>
  
  <% if vehicle_info['annual_mileage'].present? %>
    <div class="print-field-row">
      <span class="print-field-label">Annual Mileage:</span>
      <span class="print-field-value">
        <%= number_with_delimiter(vehicle_info['annual_mileage']) %> miles/year
      </span>
    </div>
  <% end %>
  
  <% if vehicle_info['safety_features'].present? %>
    <div class="print-field-row">
      <span class="print-field-label">Safety Features:</span>
      <span class="print-field-value">
        <%= vehicle_info['safety_features'].join(', ') if vehicle_info['safety_features'].is_a?(Array) %>
      </span>
    </div>
  <% end %>
</div>

<!-- Driver Information -->
<% driver_info = application.driver_info || {} %>
<% if driver_info.present? %>
  <div class="print-form-section">
    <h3 class="print-form-section-title">Driver Information</h3>
    
    <div class="print-two-columns">
      <div class="print-column">
        <div class="print-field-row">
          <span class="print-field-label">License Number:</span>
          <span class="print-field-value"><%= driver_info['license_number'] %></span>
        </div>
        <div class="print-field-row">
          <span class="print-field-label">License State:</span>
          <span class="print-field-value"><%= driver_info['license_state'] %></span>
        </div>
        <div class="print-field-row">
          <span class="print-field-label">Years Licensed:</span>
          <span class="print-field-value"><%= driver_info['years_licensed'] %> years</span>
        </div>
      </div>
      <div class="print-column">
        <div class="print-field-row">
          <span class="print-field-label">Driving Record:</span>
          <span class="print-field-value"><%= driver_info['driving_record']&.humanize %></span>
        </div>
        <div class="print-field-row">
          <span class="print-field-label">Accidents (5 years):</span>
          <span class="print-field-value"><%= driver_info['accidents_count'] || 0 %></span>
        </div>
        <div class="print-field-row">
          <span class="print-field-label">Violations (5 years):</span>
          <span class="print-field-value"><%= driver_info['violations_count'] || 0 %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>