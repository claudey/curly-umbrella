<%# 
  Loading Spinner Component
  Usage: 
    <%= render 'shared/loading_spinner' %>
    <%= render 'shared/loading_spinner', size: 'lg', text: 'Loading data...' %>
%>

<%
  size_class = case local_assigns[:size]
               when 'xs' then 'loading-xs'
               when 'sm' then 'loading-sm'
               when 'md' then 'loading-md'
               when 'lg' then 'loading-lg'
               else 'loading-md'
               end
%>

<div class="flex items-center justify-center <%= local_assigns[:class] %>">
  <span class="loading loading-spinner <%= size_class %>"></span>
  <% if local_assigns[:text] %>
    <span class="ml-2 text-base-content/70"><%= text %></span>
  <% end %>
</div>