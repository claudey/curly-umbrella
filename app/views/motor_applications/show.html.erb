<% content_for :title, "Motor Application ##{@motor_application.application_number}" %>

<div class="container mx-auto px-4 py-6">
  <!-- Header Section -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <h1 class="text-2xl lg:text-3xl font-bold text-gray-900">
            Application #<%= @motor_application.application_number %>
          </h1>
          <span class="badge <%= @motor_application.status_badge_class %> badge-lg">
            <%= @motor_application.status.humanize %>
          </span>
        </div>
        <p class="text-gray-600">
          <span class="font-medium">Vehicle:</span> <%= @motor_application.vehicle_display_name %>
        </p>
        <p class="text-gray-600 text-sm">
          Created on <%= @motor_application.created_at.strftime('%B %d, %Y at %I:%M %p') %>
        </p>
      </div>
      
      <div class="flex flex-wrap gap-2">
        <%= print_button("Print Application", "btn btn-outline btn-sm") %>
        
        <% if @motor_application.can_edit? %>
          <%= link_to "Edit Application", edit_motor_application_path(@motor_application), 
                      class: "btn btn-primary btn-sm" %>
        <% end %>
        
        <% if @motor_application.can_submit? %>
          <%= link_to "Submit Application", submit_application_motor_application_path(@motor_application), 
                      method: :patch, 
                      class: "btn btn-success btn-sm",
                      data: { confirm: "Are you sure you want to submit this application?" } %>
        <% end %>
        
        <% if @motor_application.can_review? %>
          <%= link_to "Start Review", start_review_motor_application_path(@motor_application), 
                      method: :patch, 
                      class: "btn btn-warning btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 xl:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="xl:col-span-2 space-y-6">
      <!-- Client Information -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Client Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <p class="text-gray-900"><%= @motor_application.client.full_name %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <p class="text-gray-900"><%= @motor_application.client.email %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
            <p class="text-gray-900"><%= @motor_application.client.phone || "-" %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Date of Birth</label>
            <p class="text-gray-900"><%= @motor_application.client.date_of_birth&.strftime('%B %d, %Y') || "-" %></p>
          </div>
        </div>
      </div>

      <!-- Vehicle Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Vehicle Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Make</label>
            <p class="text-gray-900"><%= @motor_application.vehicle_make %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Model</label>
            <p class="text-gray-900"><%= @motor_application.vehicle_model %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Year</label>
            <p class="text-gray-900"><%= @motor_application.vehicle_year %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <p class="text-gray-900"><%= @motor_application.vehicle_category&.humanize %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Usage</label>
            <p class="text-gray-900"><%= @motor_application.vehicle_usage&.humanize %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Registration Number</label>
            <p class="text-gray-900"><%= @motor_application.vehicle_registration_number || "-" %></p>
          </div>
        </div>
      </div>

      <!-- Coverage Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Coverage Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Coverage Type</label>
            <p class="text-gray-900"><%= @motor_application.coverage_type&.humanize %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Coverage Period</label>
            <p class="text-gray-900"><%= @motor_application.coverage_period || "-" %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Sum Insured</label>
            <p class="text-gray-900">
              <%= @motor_application.sum_insured ? number_to_currency(@motor_application.sum_insured) : "-" %>
            </p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Premium Amount</label>
            <p class="text-gray-900">
              <%= @motor_application.premium_amount ? number_to_currency(@motor_application.premium_amount) : "-" %>
            </p>
          </div>
        </div>
      </div>

      <!-- Driver Information -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Driver Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">License Number</label>
            <p class="text-gray-900"><%= @motor_application.driver_license_number %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">License Expiry</label>
            <p class="text-gray-900"><%= @motor_application.driver_license_expiry&.strftime('%B %d, %Y') %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Age</label>
            <p class="text-gray-900"><%= @motor_application.driver_age || "-" %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Has Claims History</label>
            <p class="text-gray-900">
              <%= @motor_application.driver_has_claims? ? "Yes" : "No" %>
            </p>
          </div>
          <% if @motor_application.driver_has_claims? && @motor_application.driver_claims_details.present? %>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-1">Claims Details</label>
              <p class="text-gray-900"><%= @motor_application.driver_claims_details %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Status Timeline -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Application Status</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
            <div>
              <p class="font-medium text-gray-900">Created</p>
              <p class="text-sm text-gray-500">
                <%= @motor_application.created_at.strftime('%b %d, %Y at %I:%M %p') %>
              </p>
            </div>
          </div>
          
          <% if @motor_application.submitted_at %>
            <div class="flex items-center gap-3">
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <div>
                <p class="font-medium text-gray-900">Submitted</p>
                <p class="text-sm text-gray-500">
                  <%= @motor_application.submitted_at.strftime('%b %d, %Y at %I:%M %p') %>
                </p>
              </div>
            </div>
          <% end %>
          
          <% if @motor_application.reviewed_at %>
            <div class="flex items-center gap-3">
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div>
                <p class="font-medium text-gray-900">Under Review</p>
                <p class="text-sm text-gray-500">
                  <%= @motor_application.reviewed_at.strftime('%b %d, %Y at %I:%M %p') %>
                </p>
                <% if @motor_application.reviewed_by %>
                  <p class="text-sm text-gray-500">by <%= @motor_application.reviewed_by.full_name %></p>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <% if @motor_application.approved_at %>
            <div class="flex items-center gap-3">
              <div class="w-3 h-3 bg-green-600 rounded-full"></div>
              <div>
                <p class="font-medium text-gray-900">Approved</p>
                <p class="text-sm text-gray-500">
                  <%= @motor_application.approved_at.strftime('%b %d, %Y at %I:%M %p') %>
                </p>
                <% if @motor_application.approved_by %>
                  <p class="text-sm text-gray-500">by <%= @motor_application.approved_by.full_name %></p>
                <% end %>
              </div>
            </div>
          <% elsif @motor_application.rejected_at %>
            <div class="flex items-center gap-3">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div>
                <p class="font-medium text-gray-900">Rejected</p>
                <p class="text-sm text-gray-500">
                  <%= @motor_application.rejected_at.strftime('%b %d, %Y at %I:%M %p') %>
                </p>
                <% if @motor_application.rejected_by %>
                  <p class="text-sm text-gray-500">by <%= @motor_application.rejected_by.full_name %></p>
                <% end %>
                <% if @motor_application.rejection_reason %>
                  <p class="text-sm text-red-600 mt-1">
                    Reason: <%= @motor_application.rejection_reason %>
                  </p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quotes Section -->
      <% if @motor_application.has_quotes? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Quotes</h3>
            <span class="badge badge-info"><%= @motor_application.quotes.count %></span>
          </div>
          
          <div class="space-y-3">
            <% @motor_application.active_quotes.limit(5).each do |quote| %>
              <div class="p-3 border border-gray-200 rounded-lg">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium text-gray-900">
                      <%= quote.insurance_company&.name || "Unknown Company" %>
                    </p>
                    <p class="text-sm text-gray-600">
                      <%= number_to_currency(quote.premium_amount) if quote.premium_amount %>
                    </p>
                  </div>
                  <span class="badge <%= quote.status_badge_class %> badge-sm">
                    <%= quote.status.humanize %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="mt-4 pt-4 border-t border-gray-200">
            <%= link_to "View All Quotes", quotes_path(motor_application_id: @motor_application.id), 
                        class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
