<% content_for :title, "Audit Logs" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="px-6 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <i class="ph-list-bullets text-blue-600 mr-2"></i>
            Audit Logs
          </h1>
          <p class="text-gray-600 mt-1">
            Detailed system activity and security events
          </p>
        </div>
        
        <div class="flex items-center space-x-2">
          <%= link_to dashboard_audits_path, class: "btn-secondary" do %>
            <i class="ph-chart-bar mr-2"></i>
            Dashboard
          <% end %>
          
          <%= link_to compliance_report_audits_path, class: "btn-primary" do %>
            <i class="ph-certificate mr-2"></i>
            Compliance Report
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="px-6 py-6">
    <!-- Statistics Summary -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="grid grid-cols-2 md:grid-cols-6 gap-4 text-center">
        <div>
          <p class="text-2xl font-semibold text-blue-600"><%= @stats[:total_activities] %></p>
          <p class="text-sm text-gray-600">Total Activities</p>
        </div>
        <div>
          <p class="text-2xl font-semibold text-green-600"><%= @stats[:today_activities] %></p>
          <p class="text-sm text-gray-600">Today</p>
        </div>
        <div>
          <p class="text-2xl font-semibold text-yellow-600"><%= @stats[:suspicious_activities] %></p>
          <p class="text-sm text-gray-600">Suspicious</p>
        </div>
        <div>
          <p class="text-2xl font-semibold text-red-600"><%= @stats[:failed_logins] %></p>
          <p class="text-sm text-gray-600">Failed Logins</p>
        </div>
        <div>
          <p class="text-2xl font-semibold text-purple-600"><%= @stats[:data_modifications] %></p>
          <p class="text-sm text-gray-600">Modifications</p>
        </div>
        <div>
          <p class="text-2xl font-semibold text-indigo-600"><%= @stats[:compliance_events] %></p>
          <p class="text-sm text-gray-600">Compliance</p>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">
          <i class="ph-funnel mr-2"></i>
          Filters
        </h3>
      </div>
      
      <%= form_with url: audits_path, method: :get, local: true, class: "p-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
          <div>
            <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :search, value: params[:search], 
                            placeholder: "Search actions, resources...",
                            class: "w-full rounded-md border-gray-300" %>
          </div>
          
          <div>
            <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :category, 
                        options_for_select([['All Categories', '']] + AuditLog.categories.map { |k, v| [k.humanize, k] }, params[:category]),
                        {}, { class: "w-full rounded-md border-gray-300" } %>
          </div>
          
          <div>
            <%= f.label :severity, "Severity", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :severity,
                        options_for_select([['All Severities', '']] + AuditLog.severities.map { |k, v| [k.humanize, k] }, params[:severity]),
                        {}, { class: "w-full rounded-md border-gray-300" } %>
          </div>
          
          <div>
            <%= f.label :user_id, "User", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :user_id,
                        options_for_select([['All Users', '']] + Current.organization.users.pluck(:email, :id), params[:user_id]),
                        {}, { class: "w-full rounded-md border-gray-300" } %>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
          <div>
            <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :start_date, value: params[:start_date],
                            class: "w-full rounded-md border-gray-300" %>
          </div>
          
          <div>
            <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :end_date, value: params[:end_date],
                            class: "w-full rounded-md border-gray-300" %>
          </div>
          
          <div class="flex items-end">
            <%= f.submit "Apply Filters", class: "btn-primary mr-2" %>
            <%= link_to "Clear", audits_path, class: "btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Audit Logs Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">
          Activity Log
        </h3>
        
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-500">
            <%= pluralize(@audit_logs.total_count, 'record') %>
          </span>
          
          <!-- Export Dropdown -->
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" 
                    class="btn-secondary text-sm flex items-center">
              <i class="ph-download mr-2"></i>
              Export
              <i class="ph-caret-down ml-1"></i>
            </button>
            
            <div data-dropdown-target="menu" 
                 class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 hidden z-50">
              <div class="py-1">
                <%= link_to export_audits_path(format: 'csv', **request.query_parameters),
                           class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <i class="ph-file-csv mr-2"></i>Export as CSV
                <% end %>
                <%= link_to export_audits_path(format: 'json', **request.query_parameters),
                           class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <i class="ph-file-code mr-2"></i>Export as JSON
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Timestamp
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                User
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Action
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Resource
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Category
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Severity
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                IP Address
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @audit_logs.each do |log| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= l(log.created_at, format: :short) %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center">
                      <i class="ph-user text-gray-600 text-xs"></i>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-gray-900">
                        <%= log.user&.display_name || 'System' %>
                      </p>
                      <% if log.user %>
                        <p class="text-xs text-gray-500">
                          <%= log.user.email %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= log.display_action %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= log.resource_type %>
                    <% if log.resource_id %>
                      <span class="text-gray-500">#<%= log.resource_id %></span>
                    <% end %>
                  </div>
                  <% if log.auditable %>
                    <div class="text-xs text-gray-500">
                      <%= truncate(log.auditable.try(:name) || log.auditable.try(:title) || 'N/A', length: 30) %>
                    </div>
                  <% end %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= category_badge_class(log.category) %>">
                    <%= log.display_category %>
                  </span>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= severity_badge_class(log.severity) %>">
                    <%= log.display_severity %>
                  </span>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.ip_address || 'N/A' %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to audit_path(log), 
                             class: "text-blue-600 hover:text-blue-900",
                             title: "View Details" do %>
                    <i class="ph-eye"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <% if @audit_logs.empty? %>
          <div class="text-center py-12">
            <i class="ph-magnifying-glass text-gray-400 text-4xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900">No audit logs found</h3>
            <p class="text-gray-500 mt-1">
              Try adjusting your filters or date range.
            </p>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <% if @audit_logs.respond_to?(:total_pages) && @audit_logs.total_pages > 1 %>
        <div class="px-6 py-4 border-t border-gray-200">
          <%= paginate @audit_logs, theme: 'twitter_bootstrap_4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>