<div class="container-fluid py-4">
  <!-- Dashboard Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Dashboard</h1>
      <p class="text-muted mb-0">Welcome back, <%= current_user.display_name %>! Here's what's happening with your documents.</p>
    </div>
    
    <div class="d-flex gap-2">
      <%= link_to "Upload Document", new_document_path, class: "btn btn-primary" %>
      <%= link_to "View All Documents", documents_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <!-- Key Metrics Row -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card bg-primary text-white">
        <div class="card-body text-center">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h3 mb-1"><%= number_with_delimiter(@document_metrics[:total_documents]) %></h2>
              <p class="mb-0">Total Documents</p>
            </div>
            <i class="fas fa-file-alt fa-2x opacity-75"></i>
          </div>
          <div class="mt-2">
            <small class="opacity-75">
              +<%= @document_metrics[:documents_this_month] %> this month
            </small>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-success text-white">
        <div class="card-body text-center">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h3 mb-1"><%= number_with_delimiter(@document_metrics[:active_documents]) %></h2>
              <p class="mb-0">Active Documents</p>
            </div>
            <i class="fas fa-check-circle fa-2x opacity-75"></i>
          </div>
          <div class="mt-2">
            <small class="opacity-75">
              <%= number_to_percentage((@document_metrics[:active_documents].to_f / [@document_metrics[:total_documents], 1].max) * 100, precision: 1) %> of total
            </small>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-warning text-white">
        <div class="card-body text-center">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h3 mb-1"><%= @document_metrics[:expiring_soon] %></h2>
              <p class="mb-0">Expiring Soon</p>
            </div>
            <i class="fas fa-clock fa-2x opacity-75"></i>
          </div>
          <div class="mt-2">
            <small class="opacity-75">
              Next 7 days
            </small>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-info text-white">
        <div class="card-body text-center">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h3 mb-1"><%= format_file_size(@document_metrics[:total_file_size]) %></h2>
              <p class="mb-0">Storage Used</p>
            </div>
            <i class="fas fa-cloud fa-2x opacity-75"></i>
          </div>
          <div class="mt-2">
            <small class="opacity-75">
              Across all documents
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Dashboard Content -->
  <div class="row">
    <!-- Left Column -->
    <div class="col-lg-8">
      <!-- Recent Documents -->
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">Recent Documents</h5>
          <%= link_to "View All", documents_path, class: "btn btn-sm btn-outline-primary" %>
        </div>
        <div class="card-body p-0">
          <% if @recent_documents.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Document</th>
                    <th>Type</th>
                    <th>Size</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_documents.each do |document| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <i class="<%= document_icon_class(document.document_type) %> me-2"></i>
                          <div>
                            <%= link_to document.name, document, class: "text-decoration-none fw-bold" %>
                            <% if document.description.present? %>
                              <br><small class="text-muted"><%= truncate(document.description, length: 40) %></small>
                            <% end %>
                          </div>
                        </div>
                      </td>
                      <td><span class="badge <%= document_type_badge_class(document.document_type) %>"><%= document.document_type.humanize %></span></td>
                      <td><%= document.human_file_size %></td>
                      <td>
                        <%= time_ago_in_words(document.created_at) %> ago
                        <br><small class="text-muted">by <%= document.user.full_name %></small>
                      </td>
                      <td><%= document_status_badge(document) %></td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <%= link_to "View", document, class: "btn btn-outline-primary btn-sm" %>
                          <%= link_to "Download", download_document_path(document), class: "btn btn-outline-secondary btn-sm" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-file-alt fa-2x text-muted mb-2"></i>
              <p class="text-muted">No documents yet. <%= link_to "Upload your first document", new_document_path, class: "text-decoration-none" %>.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Document Type Breakdown Chart -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Document Types Overview</h5>
        </div>
        <div class="card-body">
          <% if @document_type_breakdown.any? %>
            <div class="row">
              <% @document_type_breakdown.each do |type, count| %>
                <div class="col-md-6 mb-3">
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                      <i class="<%= document_icon_class(type) %> me-2"></i>
                      <span><%= type.humanize %></span>
                    </div>
                    <div class="d-flex align-items-center">
                      <span class="badge <%= document_type_badge_class(type) %> me-2"><%= count %></span>
                      <div class="progress" style="width: 60px; height: 8px;">
                        <div class="progress-bar" role="progressbar" 
                             style="width: <%= (count.to_f / @document_metrics[:total_documents] * 100).round(1) %>%">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted text-center">No document data available yet.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-4">
      <!-- Quick Actions -->
      <div class="card mb-4">
        <div class="card-header">
          <h6 class="card-title mb-0">Quick Actions</h6>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to new_document_path, class: "btn btn-primary" do %>
              <i class="fas fa-upload me-2"></i>Upload Document
            <% end %>
            <%= link_to documents_path, class: "btn btn-outline-primary" do %>
              <i class="fas fa-search me-2"></i>Browse Documents
            <% end %>
            <%= link_to archived_documents_path, class: "btn btn-outline-secondary" do %>
              <i class="fas fa-archive me-2"></i>View Archived
            <% end %>
            <%= link_to expiring_documents_path, class: "btn btn-outline-warning" do %>
              <i class="fas fa-clock me-2"></i>Expiring Documents
            <% end %>
          </div>
        </div>
      </div>

      <!-- Upcoming Tasks -->
      <div class="card mb-4">
        <div class="card-header">
          <h6 class="card-title mb-0">Upcoming Tasks</h6>
        </div>
        <div class="card-body p-0">
          <% if @upcoming_tasks.any? %>
            <div class="list-group list-group-flush">
              <% @upcoming_tasks.first(5).each do |task| %>
                <div class="list-group-item d-flex justify-content-between align-items-start">
                  <div class="me-auto">
                    <div class="fw-bold">
                      <%= link_to task[:title], task[:url], class: "text-decoration-none" %>
                    </div>
                    <small class="text-muted"><%= task[:description] %></small>
                  </div>
                  <span class="badge bg-<%= task[:priority] == 'high' ? 'danger' : task[:priority] == 'medium' ? 'warning' : 'secondary' %> rounded-pill">
                    <%= task[:priority] %>
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-3">
              <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
              <p class="text-muted mb-0">All caught up!</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- My Recent Activity -->
      <div class="card mb-4">
        <div class="card-header">
          <h6 class="card-title mb-0">My Recent Documents</h6>
        </div>
        <div class="card-body p-0">
          <% if @my_recent_documents.any? %>
            <div class="list-group list-group-flush">
              <% @my_recent_documents.each do |document| %>
                <div class="list-group-item">
                  <div class="d-flex align-items-center">
                    <i class="<%= document_icon_class(document.document_type) %> me-2"></i>
                    <div class="flex-grow-1">
                      <%= link_to document.name, document, class: "text-decoration-none fw-bold" %>
                      <br><small class="text-muted">
                        <%= time_ago_in_words(document.created_at) %> ago â€¢ <%= document.human_file_size %>
                      </small>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="card-footer text-center">
              <%= link_to "View all my documents", documents_path(user: current_user.id), class: "btn btn-sm btn-outline-primary" %>
            </div>
          <% else %>
            <div class="text-center py-3">
              <p class="text-muted mb-0">No recent documents</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Storage Usage -->
      <div class="card">
        <div class="card-header">
          <h6 class="card-title mb-0">Storage & System Info</h6>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <span>Documents</span>
              <span><%= @document_metrics[:total_documents] %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Total Storage</span>
              <span><%= format_file_size(@document_metrics[:total_file_size]) %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Organization Users</span>
              <span><%= @system_metrics[:total_users] %></span>
            </div>
            <% if @system_metrics[:total_applications] > 0 %>
              <div class="d-flex justify-content-between">
                <span>Applications</span>
                <span><%= @system_metrics[:total_applications] %></span>
              </div>
            <% end %>
          </div>
          
          <% if @category_breakdown.any? %>
            <hr>
            <div>
              <h6 class="mb-2">Top Categories</h6>
              <% @category_breakdown.each do |category, count| %>
                <div class="d-flex justify-content-between">
                  <span><%= category.humanize %></span>
                  <span class="badge bg-light text-dark"><%= count %></span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
