<%= content_tag tag_name, **tag_options do %>
  <% if show_image? %>
    <div class="overflow-hidden rounded-t-lg">
      <%= image_tag image, alt: title || "Card image", class: "w-full h-48 object-cover" %>
    </div>
  <% end %>

  <div class="<%= 'space-y-4' unless padding == false %>">
    <% if show_header? %>
      <% if header? %>
        <%= header %>
      <% else %>
        <div class="space-y-1">
          <% if title.present? %>
            <h3 class="text-lg font-semibold text-neutral-900"><%= title %></h3>
          <% end %>
          <% if subtitle.present? %>
            <p class="text-sm text-neutral-600"><%= subtitle %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>

    <% if body? %>
      <div class="text-neutral-700">
        <%= body %>
      </div>
    <% elsif content.present? %>
      <div class="text-neutral-700">
        <%= content %>
      </div>
    <% end %>

    <% if show_footer? %>
      <div class="flex items-center justify-between pt-2">
        <% if footer? %>
          <div class="text-sm text-neutral-500">
            <%= footer %>
          </div>
        <% end %>
        <% if actions? %>
          <div class="flex space-x-2">
            <% actions.each do |action| %>
              <%= action %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>