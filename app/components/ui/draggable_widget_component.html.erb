<div <%= tag.attributes(widget_attributes) %>>
  <% if show_header? %>
    <div class="<%= header_classes %>">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <% if icon.present? %>
            <div class="flex-shrink-0">
              <%= icon(icon, size: 20, class: "text-primary") %>
            </div>
          <% end %>
          
          <div class="flex-1 min-w-0">
            <% if title.present? %>
              <h3 class="text-sm font-semibold text-base-content truncate">
                <%= title %>
              </h3>
            <% end %>
            
            <% if subtitle.present? %>
              <p class="text-xs text-base-content/60 truncate">
                <%= subtitle %>
              </p>
            <% end %>
          </div>
        </div>

        <% if show_controls? %>
          <div class="flex items-center space-x-1">
            <% if collapsible %>
              <button class="btn btn-ghost btn-xs" data-action="click->collapsible-card#toggle">
                <%= icon(:chevron_down, size: 16) %>
              </button>
            <% end %>
            
            <% if removable %>
              <button class="btn btn-ghost btn-xs text-error hover:bg-error/10" 
                      data-action="click->widget#remove"
                      data-confirm="Are you sure you want to remove this widget?">
                <%= icon(:x_mark, size: 16) %>
              </button>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if header? %>
        <div class="mt-3">
          <%= render header %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="<%= body_classes %>">
    <%= render_widget_content %>
  </div>

  <% if footer? %>
    <div class="<%= footer_classes %>">
      <%= render footer %>
    </div>
  <% end %>
</div>