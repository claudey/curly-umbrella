<% content = capture do %>
  <div class="<%= card_classes %>">
    <% if @icon %>
      <div class="<%= figure_classes %>">
        <%= icon(@icon, class: "w-8 h-8") %>
      </div>
    <% end %>
    
    <div class="stat-title"><%= @title %></div>
    <div class="<%= value_classes %>"><%= formatted_value %></div>
    
    <% if @description %>
      <div class="stat-desc">
        <%= @description %>
        
        <% if @trend %>
          <div class="flex items-center gap-1 mt-1">
            <%= icon(trend_icon, class: "w-3 h-3 #{trend_color}") %>
            <span class="<%= trend_color %> text-xs">
              <%= @trend[:percentage] %>% <%= @trend[:period] %>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<% if @link_to %>
  <%= link_to @link_to, class: "block hover:scale-105 transition-transform" do %>
    <%= content %>
  <% end %>
<% else %>
  <%= content %>
<% end %>